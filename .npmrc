; NPM configuration for consistent behavior across all environments
; @see https://docs.npmjs.com/cli/v8/configuring-npm/npmrc

; Fail the install if there are any conflicting peer dependencies
legacy-peer-deps=false

; Audit security vulnerabilities with moderate and higher severity
audit-level=moderate

; Use exact versions for reproducible builds
save-exact=false

; Progress bar for better visibility
progress=true
